<div id="<%= dom_id job_offer %>">
  <p>
    <strong>Title:</strong>
    <%= job_offer.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= job_offer.description %>
  </p>

  <% if @job_applications.present? %>
    <h2>Postulaciones</h2>
    <ul>
      <% @job_applications.each do |application| %>
        <li>
          <%= application.user.email %> - <%= application.created_at %>
          <!-- Agrega aquí más información relevante de la aplicación -->
        </li>
      <% end %>
    </ul>
  <% end %>



</div>
